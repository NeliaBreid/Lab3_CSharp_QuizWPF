<Application x:Class="QuizLab3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QuizLab3"
             xmlns:views="clr-namespace:QuizLab3.Views"
             xmlns:viewmodel="clr-namespace:QuizLab3.ViewModel"
             StartupUri="MainWindow.xaml"
             
             >

    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:ConfigurationViewModel}">
            <views:ConfigurationView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:PlayerViewModel}">
            <views:PlayerView/>
        </DataTemplate>
 
        
    </Application.Resources>
</Application>
