<Window x:Class="QuizLab3.Dialogs.PackOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizLab3.Dialogs"
        mc:Ignorable="d"
        Title="Pack Options" Height="350" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="PackName" Margin="5" FontWeight="Bold"/>
            <TextBox Margin="10" Text="Default Question Pack"/>
            <Label Content="Difficulty" FontWeight="Bold"/>
            <ComboBox>
                <ComboBoxItem>Easy</ComboBoxItem>
                <ComboBoxItem>Medium</ComboBoxItem>
                <ComboBoxItem>Hard</ComboBoxItem>
            </ComboBox>

            <StackPanel Orientation="Horizontal">

                <Label HorizontalAlignment="Left" VerticalAlignment="Center"  Content="Time Limit:" FontWeight="Bold"/>
                <Label HorizontalAlignment="Right" VerticalAlignment="Center" Content="... seconds"/>
            </StackPanel>
            <Slider 
   Margin="0 20 0 20"
  Minimum="0"
  Maximum="100"
  Width="250"
  Value="0"/>
        </StackPanel>
    </Grid>
</Window>
