<UserControl x:Class="QuizLab3.Views.ResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizLab3.Views"
             xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>

        <Label VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="35" Grid.Column="1" Margin="0,10,10,0">100</Label>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="185" Grid.ColumnSpan="2" Margin="0,80,0,0" Width="418" RenderTransformOrigin="0.5,0.5">

            <Label HorizontalAlignment="Center" FontSize="35">Complete!</Label>
            <Label HorizontalAlignment="Center">You got ... out of ... Questions correct</Label>
            <Button Margin="10" Width="100" Height="40">
                <fa:IconBlock Icon="ArrowsSpin" Foreground="Black"/>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
